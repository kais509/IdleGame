<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#1A1A1A">

    <!-- Game View -->
    <com.example.idlegameapp.GameView
        android:id="@+id/gameView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="24dp" />

    <!-- Currency Counter -->
    <TextView
        android:id="@+id/currencyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gameView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="Currency: 0.00"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

    <!-- Flat Upgrade Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/flatUpgradeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/currencyTextView"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:textSize="16sp"
        app:backgroundTint="#4CAF50"
        android:text="Add Dot (10.00)"
        app:cornerRadius="24dp" />

    <!-- Multiplier Upgrade Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/multiplierUpgradeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/flatUpgradeButton"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:textSize="16sp"
        app:backgroundTint="#2196F3"
        android:text="Speed x1.1 (50.00)"
        app:cornerRadius="24dp" />

    <!-- Exponent Upgrade Button -->
    <Button
        android:id="@+id/exponentUpgradeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/multiplierUpgradeButton"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:textSize="16sp"
        android:backgroundTint="#FF9800"
        android:text="New Line (200.00)"
        app:cornerRadius="24dp"
        android:elevation="4dp" />

</RelativeLayout>
